import java.net.Socket;

public class ClientMain{
    public static void main(String[] args){
        try{
            Socket soc = new Socket("192.168.0.36", 3000);
            new Client(soc).run();
            soc.close();
            System.exit(0);
        }
        catch(Exception e){
        	System.out.println("Conexão perdida com o servidor.");
        }
    }
}